<header>
  <div class="container">
    <div class="header">
      <button class="menu-burger-btn header-icon e--mob">
        <div class="menu-btn-burger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </button>

      <img
        class="header-logo"
        src="{{ section.settings.header_logo | img_url }}"
        alt="Logo"
        width="101"
        height="36" />

      <div class="d-flex">
        <button class="header-icon e--dsk">
          <img
            src="https://cdn.shopify.com/s/files/1/0726/7631/1323/files/search.svg?v=1677694745"
            alt="Search"
            width="17"
            height="17" />
        </button>

        <div class="menu-burger">
          <nav>
            <ul class="menu-burger-ul">
              {% for link in section.settings.main_menu.links %}
                <li>
                  {%- capture page_url -%}
                    {%- if page.url == null -%}
                      {{- "/" -}}
                    {%- else -%}
                      {{- page.url -}}
                    {%- endif -%}
                  {%- endcapture -%}
                  <a
                    class="header-link header-burger-link {% if page_url == link.url %} active {% endif %}"
                    href="{{ link.url }}"
                  >
                    {{- link.title -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>

        <nav class="header-nav">
          <ul class="menu d-flex">
            {% for link in section.settings.main_menu.links %}
              <li class="menu-link">
                {%- capture page_url -%}
                  {%- if page.url == null -%}
                    {{- "/" -}}
                  {%- else -%}
                    {{- page.url -}}
                  {%- endif -%}
                {%- endcapture -%}
                <a class="header-link {% if page_url == link.url %} active {% endif %}" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>

        </nav>

        <div class="header-right-nav">
          <button class="header-icon">
            <img
              src="https://cdn.shopify.com/s/files/1/0726/7631/1323/files/cart.svg?v=1677694745"
              alt="Cart"
              width="21"
              height="20" />
          </button>
          <button class="header-icon e--dsk">
            <img
              src="https://cdn.shopify.com/s/files/1/0726/7631/1323/files/heart.svg?v=1677694745"
              alt="Search"
              width="20"
              height="18" />
          </button>
          <button class="header-icon e--dsk">
            <img
              src="https://cdn.shopify.com/s/files/1/0726/7631/1323/files/user.svg?v=1677694745"
              alt="Search"
              width="15"
              height="18" />
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

{% javascript %}
  const menuBtn = document.querySelector('.menu-btn-burger');
  const menu = document.querySelector('.menu-burger');
  const body = document.querySelector('body');

  menuBtn.addEventListener('click', function () {
    menu.classList.toggle('active');
    menuBtn.classList.toggle('active');
    body.classList.toggle('ohidden');
  });
{% endjavascript %}

{% schema %}
  {
    "name": "header",
    "settings": [
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Add your menu-link"
      },
      {
        "type":"image_picker",
        "id": "header_logo",
        "label": "Change your logo"
      }
    ]
  }
{% endschema %}