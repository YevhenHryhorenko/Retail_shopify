{% javascript %}
  const footerBtn = document.querySelectorAll('.footer-mob-button');

  if (footerBtn) {
    footerBtn.forEach((btn) => {
      btn.parentElement.addEventListener('click', (e) => {
        if (e.target.classList.contains('footer-mob-button')) {
          e.target.querySelector('.footer-arrow').classList.toggle('rotate-arrow');
          e.target.classList.toggle('active');
        } else if (e.target.classList.contains('footer-arrow')) {
          e.target.parentElement.querySelector('.footer-arrow').classList.toggle('rotate-arrow');
          e.target.parentElement.classList.toggle('active');
        }
      });
    });
  }
{% endjavascript %}

<style>
  .footer-arrow {
    max-width: 19px;
    transition: 0.3s all;
  }

  .footer-nav-links-mob {
    max-height: 0;
    transition: 0.6s all;
  }
  .dropdown .active + .footer-nav-links-mob {
    max-height: 400px;
    visibility: visible;
    transition: 0.6s all;
    margin-top: 15px;
  }

  .dropdown {
    overflow: hidden;
    position: relative;
  }

  .rotate-arrow {
    transform: rotateZ(90deg);
    transition: 0.3s all;
  }
  .footer-mob-button {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>

