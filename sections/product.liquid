        <picture class="main-image">
          {{
            product.images[0]
            | image_url: width: 900
            | image_tag:
              class: image_class,
              loading: lazy,
              sizes: sizes,
              widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946'
          }}
        </picture>
        <div class="sub-images-wrap d-flex e--f-start">
